{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://raw.githubusercontent.com/daflan-org/fawa-compliance-evidence/main/schemas/evidence.schema.json",
  "title": "ComplianceEvidence",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schemaVersion",
    "generatedAt",
    "source",
    "policyStatus",
    "attestationStatus",
    "documents",
    "testEvidence",
    "verificationCommands",
    "limits"
  ],
  "properties": {
    "schemaVersion": { "const": "1.0.0" },
    "generatedAt": { "type": "string", "format": "date-time" },
    "source": {
      "type": "object",
      "additionalProperties": false,
      "required": ["owner", "repo", "ref", "commitSha"],
      "properties": {
        "owner": { "type": "string", "minLength": 1 },
        "repo": { "type": "string", "minLength": 1 },
        "ref": { "type": "string", "minLength": 1 },
        "commitSha": { "type": "string", "minLength": 7 }
      }
    },
    "policyStatus": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "provider",
        "workflowPath",
        "policyPath",
        "inputBuilderPath"
      ],
      "properties": {
        "provider": { "type": "string", "minLength": 1 },
        "workflowPath": { "type": "string", "minLength": 1 },
        "policyPath": { "type": "string", "minLength": 1 },
        "inputBuilderPath": { "type": "string", "minLength": 1 }
      }
    },
    "attestationStatus": {
      "type": "object",
      "additionalProperties": false,
      "required": ["provider", "workflowPaths"],
      "properties": {
        "provider": { "type": "string", "minLength": 1 },
        "workflowPaths": {
          "type": "array",
          "items": { "type": "string", "minLength": 1 },
          "minItems": 1
        }
      }
    },
    "documents": {
      "type": "array",
      "minItems": 2,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["key", "title", "path", "url", "sha"],
        "properties": {
          "key": {
            "type": "string",
            "enum": ["trustCompliance", "storeCompliance"]
          },
          "title": { "type": "string", "minLength": 1 },
          "path": { "type": "string", "minLength": 1 },
          "url": { "type": "string", "minLength": 1 },
          "sha": { "type": "string", "minLength": 1 }
        }
      }
    },
    "testEvidence": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "testId",
          "sourcePath",
          "suiteType",
          "result",
          "workflowPath",
          "runId",
          "jobName",
          "sourceCommitSha",
          "executedAt",
          "artifacts",
          "verificationCommand"
        ],
        "properties": {
          "testId": { "type": "string", "minLength": 1 },
          "sourcePath": { "type": "string", "minLength": 1 },
          "suiteType": { "type": "string", "enum": ["unit", "e2e"] },
          "result": { "type": "string", "enum": ["passed", "failed"] },
          "workflowPath": { "type": "string", "minLength": 1 },
          "runId": { "type": "string", "minLength": 1 },
          "jobName": { "type": "string", "minLength": 1 },
          "sourceCommitSha": { "type": "string", "minLength": 7 },
          "executedAt": { "type": "string", "format": "date-time" },
          "artifacts": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "object",
              "additionalProperties": false,
              "required": ["format", "path", "sha256"],
              "properties": {
                "format": { "type": "string", "enum": ["json", "junit"] },
                "path": { "type": "string", "minLength": 1 },
                "sha256": {
                  "type": "string",
                  "pattern": "^[A-Fa-f0-9]{64}$"
                }
              }
            }
          },
          "verificationCommand": { "type": "string", "minLength": 1 }
        }
      }
    },
    "verification": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "dispatcher",
        "ciArtifactsValidated",
        "deployJobsValidated",
        "sourceRepo",
        "environment",
        "ciRunId",
        "deployRunId"
      ],
      "properties": {
        "dispatcher": { "type": "string", "minLength": 1 },
        "ciArtifactsValidated": { "type": "boolean" },
        "deployJobsValidated": { "type": "boolean" },
        "sourceRepo": { "type": "string", "minLength": 1 },
        "environment": { "type": "string", "minLength": 1 },
        "ciRunId": { "type": "string", "minLength": 1 },
        "deployRunId": { "type": "string", "minLength": 1 }
      }
    },
    "policyPackage": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "version",
        "filePath",
        "sha256",
        "signaturePath",
        "publicKeyPath",
        "policyInputSha256",
        "checksumVerified",
        "signatureVerified",
        "sourceUrl"
      ],
      "properties": {
        "version": { "type": "string", "minLength": 1 },
        "filePath": { "type": "string", "minLength": 1 },
        "sha256": {
          "type": "string",
          "pattern": "^[A-Fa-f0-9]{64}$"
        },
        "signaturePath": { "type": "string", "minLength": 1 },
        "publicKeyPath": { "type": "string", "minLength": 1 },
        "policyInputSha256": {
          "type": "string",
          "pattern": "^[A-Fa-f0-9]{64}$"
        },
        "checksumVerified": { "type": "boolean" },
        "signatureVerified": { "type": "boolean" },
        "sourceUrl": { "type": "string", "minLength": 1 }
      }
    },
    "deployEvidence": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "runId",
        "runNumber",
        "workflowName",
        "htmlUrl",
        "conclusion",
        "jobs"
      ],
      "properties": {
        "runId": { "type": "string", "minLength": 1 },
        "runNumber": { "type": "string", "minLength": 1 },
        "workflowName": { "type": "string", "minLength": 1 },
        "htmlUrl": { "type": "string", "minLength": 1 },
        "conclusion": { "type": "string", "minLength": 1 },
        "jobs": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": [
              "name",
              "status",
              "conclusion",
              "startedAt",
              "completedAt",
              "htmlUrl"
            ],
            "properties": {
              "name": { "type": "string", "minLength": 1 },
              "status": { "type": "string", "minLength": 1 },
              "conclusion": {
                "anyOf": [
                  { "type": "string", "minLength": 1 },
                  { "type": "null" }
                ]
              },
              "startedAt": {
                "anyOf": [
                  { "type": "string", "format": "date-time" },
                  { "type": "null" }
                ]
              },
              "completedAt": {
                "anyOf": [
                  { "type": "string", "format": "date-time" },
                  { "type": "null" }
                ]
              },
              "htmlUrl": { "type": "string", "minLength": 1 }
            }
          }
        }
      }
    },
    "checks": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["id", "name", "status", "expected", "actual"],
        "properties": {
          "id": { "type": "string", "minLength": 1 },
          "name": { "type": "string", "minLength": 1 },
          "status": { "type": "string", "enum": ["passed", "failed"] },
          "expected": { "type": "string", "minLength": 1 },
          "actual": { "type": "string", "minLength": 1 }
        }
      }
    },
    "verificationCommands": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["label", "command"],
        "properties": {
          "label": { "type": "string", "minLength": 1 },
          "command": { "type": "string", "minLength": 1 }
        }
      }
    },
    "limits": {
      "type": "array",
      "items": { "type": "string", "minLength": 1 }
    }
  }
}
